<!DOCTYPE html>
<html lang="zh-Hant">
<head>
  <meta charset="UTF-8">
  <title>遊戲幣值計算機</title>
  <style>
    body { font-family: sans-serif; padding: 20px; }
    .row { display: flex; margin-bottom: 10px; }
    .label { width: 100px; line-height: 32px; }
    input { flex: 1; padding: 5px; }
    #warning { color: red; font-weight: bold; margin-bottom: 20px; }
    .section { margin-top: 30px; border-top: 1px solid #ccc; padding-top: 20px; }
  </style>
</head>
<body>
  <h1>遊戲幣值計算機</h1>
  <div id="warning">請輸入雪花價格</div>

  <div class="row">
    <div class="label">NTD</div>
    <input type="number" id="ntd" oninput="fromInput('ntd')">
  </div>
  <div class="row">
    <div class="label">WC</div>
    <input type="number" id="wc" oninput="fromInput('wc')">
  </div>
  <div class="row">
    <div class="label">雪花</div>
    <input type="number" id="snow" oninput="fromInput('snow')">
  </div>
  <div class="row">
    <div class="label">楓幣</div>
    <input type="number" id="meso" oninput="fromInput('meso')">
  </div>

  <div class="section">
    <h2>幣值設定</h2>
    <div class="row">
      <div class="label">NTD : WC</div>
      <input type="number" id="rate_ntd_wc" value="120" oninput="update()">
    </div>
    <div class="row">
      <div class="label">WC : 雪花</div>
      <input type="number" id="rate_wc_snow" value="300" oninput="update()">
    </div>
    <div class="row">
      <div class="label">雪花 : 楓幣</div>
      <input type="number" id="rate_snow_meso" placeholder="請輸入" oninput="update()">
    </div>
  </div>

  <script>
    function getRates() {
      const ntdPerWC = parseFloat(document.getElementById('rate_ntd_wc').value) || 120;
      const wcPerSnow = parseFloat(document.getElementById('rate_wc_snow').value) || 300 / 11;
      const snowPerMeso = parseFloat(document.getElementById('rate_snow_meso').value);
      return { ntdPerWC, wcPerSnow, snowPerMeso };
    }

    function fromInput(source) {
      const ntd = document.getElementById('ntd');
      const wc = document.getElementById('wc');
      const snow = document.getElementById('snow');
      const meso = document.getElementById('meso');
      const { ntdPerWC, wcPerSnow, snowPerMeso } = getRates();

      const warning = document.getElementById('warning');
      if (!snowPerMeso) {
        warning.style.display = 'block';
        return;
      } else {
        warning.style.display = 'none';
      }

      let value;
      if (source === 'ntd') {
        value = parseFloat(ntd.value);
        if (isNaN(value)) return;
        wc.value = value / ntdPerWC * 800;
        snow.value = wc.value / wcPerSnow * 11;
        meso.value = snow.value * snowPerMeso;
      } else if (source === 'wc') {
        value = parseFloat(wc.value);
        if (isNaN(value)) return;
        ntd.value = value / 800 * ntdPerWC;
        snow.value = value / wcPerSnow * 11;
        meso.value = snow.value * snowPerMeso;
      } else if (source === 'snow') {
        value = parseFloat(snow.value);
        if (isNaN(value)) return;
        wc.value = value * wcPerSnow / 11;
        ntd.value = wc.value / 800 * ntdPerWC;
        meso.value = value * snowPerMeso;
      } else if (source === 'meso') {
        value = parseFloat(meso.value);
        if (isNaN(value)) return;
        snow.value = value / snowPerMeso;
        wc.value = snow.value * wcPerSnow / 11;
        ntd.value = wc.value / 800 * ntdPerWC;
      }
    }

    function update() {
      fromInput('ntd'); // 更新目前資料
    }
  </script>
</body>
</html>
